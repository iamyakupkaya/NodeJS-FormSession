       <!-- Outer Row -->
       <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Please Enter Your New Password</h1>
                                    <% if (locals.validation_errors != undefined || locals.success_message != undefined || locals.login_error != undefined) { %>
                                        <%- include("./partials/_message.ejs") %> 
                                    <% } %>
                                </div>
                                <form class="user" action="/newpassword" method="post">
                                    <input type="hidden" name="hidden_new_id" value="<%- typeof(id) != "undefined" ? id : "" %>" >
                                    <input type="hidden" name="hidden_new_token" value="<%- typeof(token) != "undefined" ? token : "" %>" >
                                    <div class="form-group">
                                        <input type="password" name="new_password" class="form-control form-control-user"
                                            id="exampleInputEmail" aria-describedby="emailHelp"
                                            placeholder="Enter Password...">
                                            
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="new_repassword" class="form-control form-control-user"
                                        id="exampleInputEmail" aria-describedby="emailHelp"
                                        placeholder="Enter Password Again...">
                                            
                                    </div>
                                    <button class="btn btn-primary btn-user btn-block">
                                        Reset Password
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="/register">Create an Account!</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="/login">Already have an account? Login!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


